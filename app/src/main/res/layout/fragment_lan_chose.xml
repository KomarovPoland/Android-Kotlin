<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/strong_primary2"
    tools:context=".LanChoseFragment"
    >


    <Button
        android:id="@+id/engBtn"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/flag_us_little"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingStart="28dp"

        android:paddingEnd="28dp"
        android:text="English language"
        android:textAllCaps="true"

        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.506"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/kgBtn"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:backgroundTint="@color/white"

        android:layout_width="328dp"
        android:background="@drawable/shape_for_button"
        android:layout_height="52dp"
        android:layout_below="@id/engBtn"
        android:layout_marginTop="16dp"

        android:drawableStart="@drawable/flag_kg_little"
        android:drawableEnd="@drawable/ic_arrow"

        android:text="Кыргыз тили"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/engBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/rusBtn"
        android:paddingEnd="28dp"
        android:paddingStart="28dp"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_below="@id/kgBtn"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:drawableStart="@drawable/flag_ru_little"
        android:drawableEnd="@drawable/ic_arrow"
        android:text="Русский язык"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/kgBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/chBtn"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:layout_below="@id/rusBtn"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/flag_ch_little"
        android:drawableEnd="@drawable/ic_arrow"
        android:text="中文"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rusBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/open_frag_background3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/select_language"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>