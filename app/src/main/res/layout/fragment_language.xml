<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LanguageFragment">


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/engBtn"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/flag_us_little"
        android:drawableRight="@drawable/ic_arrow"

        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:text="English language"

        android:textAllCaps="true"
        android:textColor="@color/black"

        app:layout_constraintBottom_toTopOf="@+id/kgBtn"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/kgBtn"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_below="@id/engBtn"

        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/flag_kg_little"

        android:drawableEnd="@drawable/ic_arrow"
        android:paddingStart="28dp"

        android:paddingEnd="28dp"
        android:text="Кыргыз тили"

        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/rusBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/rusBtn"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_below="@id/kgBtn"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/flag_ru_little"
        android:drawableEnd="@drawable/ic_arrow"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:text="Русский язык"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/chBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/chBtn"
        android:layout_width="328dp"
        android:layout_height="52dp"
        android:layout_below="@id/rusBtn"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_for_button"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/flag_ch_little"
        android:drawableEnd="@drawable/ic_arrow"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:text="中文"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lan_frag_background_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="169dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/select_language"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/engBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>